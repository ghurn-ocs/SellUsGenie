run = "npm start"

modules = ["nodejs-20", "web"]

hidden = [".config", "package-lock.json", "node_modules"]

[env]
NODE_ENV = "production"
PORT = "3000"

[gitHubImport]
requiredFiles = [".replit"]

[nix]
channel = "stable-22_11"

[deployment]
deploymentTarget = "autoscaling"
build = ["npm", "ci"]
run = ["npm", "start"]

[[ports]]
localPort = 3000
externalPort = 80

[packager]
language = "nodejs"

[packager.features]
enabledForHosting = true
packageSearch = true
guessImports = true